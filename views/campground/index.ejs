<% include ../partials/header %>
<div class = "container">
	<div class = "jumbotron">
		<div class = "container">
			<h1>Welcome to the Yelp Camp</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<a class = "btn btn-large btn-primary" href="/campgrounds/new">Add a new campground</a>
		</div>
	</div>
	<div calss = "row text-center" style = "display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(campground){ %>
			<div class = "col-md-3 col-sm-6">
				<div class = "thumbnail">
					<img src="<%= campground.image%>">
					<div calss = "caption">
						<h4 class = "text-center" ><%= campground.name %></h4>
						<p class = "text-center">
							<a href="/campgrounds/<%= campground._id %>" class = "btn btn-primary btn-large">More Info</a>
						</p>
						
					</div>
				</div>
			</div>
		<% }) %>
	</div>
</div>

<% include ../partials/footer %>
